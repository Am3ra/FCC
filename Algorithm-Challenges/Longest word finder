
function findLongestWord(str) {
 var a = str.split(' '); 
 var b = [];
 var longest=0;
 for (i=0; i<a.length;i++){
   b.push(a[i].length);
   if (b[i]>longest){
     longest = b[i];
   }
   if (i == a.length - 1){
     return longest;
   }
 }
}

findLongestWord("What if we try a super-long word such as otorhinolaryngology");


