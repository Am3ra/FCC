function reverseString(str) {
  var string = str.split(""); 
  string = string.reverse();
  string = string.join('');
  console.log(string);
  return string;
}

function palindrome(pal) {
  pal=pal.replace(/[\W_]+/g, "").toLowerCase();
 if(reverseString(pal)==pal)
 { 
  return true;}
 return false;
} 



palindrome("A man, a plan, a canal. Panama");

